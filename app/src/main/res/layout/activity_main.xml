<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvSan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:gravity="right"
        android:paddingRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnc"
            style="@style/func"
            android:text="C"/>

        <Button
            style="@style/func"
            android:id="@+id/plusminus"
            android:text="+/-"/>

        <Button
            style="@style/func"
            android:id="@+id/percent"
            android:text="%"/>

        <Button
            style="@style/func"
            android:id="@+id/bolu"
            android:text="/"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/buttom"
            android:id="@+id/btn7"
            android:text="7"/>

        <Button
            style="@style/buttom"
            android:id="@+id/btn8"
            android:text="8"/>

        <Button
            style="@style/buttom"
            android:id="@+id/btn9"
            android:text="9"/>

        <Button
            style="@style/func"
            android:id="@+id/btnX"
            android:text="X"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/buttom"
            android:id="@+id/btn4"
            android:text="4"/>

        <Button
            style="@style/buttom"
            android:id="@+id/btn5"
            android:text="5"/>

        <Button
            style="@style/buttom"
            android:id="@+id/btn6"
            android:text="6"/>

        <Button
            style="@style/func"
            android:id="@+id/minus"
            android:text="-"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/buttom"
            android:id="@+id/btn1"
            android:text="1"/>

        <Button
            style="@style/buttom"
            android:id="@+id/btn2"
            android:text="2"/>

        <Button
            style="@style/buttom"
            android:id="@+id/btn3"
            android:text="3"/>

        <Button
            style="@style/func"
            android:id="@+id/plus"
            android:text="+"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/buttom"
            android:id="@+id/btn0"
            android:text="0"/>

        <Button
            style="@style/buttom"
            android:id="@+id/point"
            android:text="."/>

        <Button
            style="@style/buttom"
            android:text=""/>

        <Button
            style="@style/func"
            android:id="@+id/eaual"
            android:text="="/>
    </LinearLayout>

</LinearLayout>

